<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/song_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:itemCount="5"
        tools:listitem="@layout/vh_item_song"
        app:layout_constraintBottom_toTopOf="@+id/current_track_bottom_bar"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/current_track_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_item_song"
        app:layout_constraintBottom_toBottomOf="parent">


        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/current_track_linear_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:progress="35"
            app:indicatorColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/current_track_image"
            app:trackColor="@color/grey_track"
            app:trackThickness="1dp" />

        <ImageView
            android:id="@+id/current_track_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@color/green_active"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/current_track_title_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/current_track_image"
            app:layout_constraintStart_toEndOf="@+id/current_track_image"
            app:layout_constraintTop_toTopOf="@+id/current_track_image">
            <TextView
                android:id="@+id/current_track_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlist"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/current_track_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAEYEON"
                android:textColor="@color/grey_deactivated"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/current_track_playback_control"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_baseline_play_arrow_24"
            app:layout_constraintBottom_toBottomOf="@+id/current_track_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/current_track_image"
            app:tint="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>